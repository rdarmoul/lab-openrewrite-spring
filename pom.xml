<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.springframework.samples</groupId>
    <artifactId>lab-openrwrite-spring</artifactId>

    <version>1.5.1</version>

    <packaging>pom</packaging>

    <modules>
        <module>openrewrite-recipes</module>
        <module>spring-petclinic-app</module>
    </modules>


    <name>lab-openrwrite-spring</name>
    <description>a lab to learn about how to use openrewrite, having two module:
        - openrewrite-recipes: a module that contains custom openrewrite recipes to migrate spring code
        - spring-demo-app: a demo spring application to apply the openrewrite recipes
    </description>

    <properties>

        <!-- Generic properties -->
        <java.version>11</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <!-- Web dependencies -->
        <webjars-locator.version>0.45</webjars-locator.version>
        <webjars-bootstrap.version>3.3.6</webjars-bootstrap.version>
        <webjars-jquery-ui.version>1.11.4</webjars-jquery-ui.version>
        <webjars-jquery.version>2.2.4</webjars-jquery.version>
        <wro4j.version>1.9.0</wro4j.version>
        <thymeleaf.version>3.0.15.RELEASE</thymeleaf.version>

        <cobertura.version>2.7</cobertura.version>

    </properties>


    <build>
        <plugins>
            <plugin>
                <groupId>org.openrewrite.maven</groupId>
                <artifactId>rewrite-maven-plugin</artifactId>
                <version>6.27.0</version>
                <configuration>
                    <exportDatatables>true</exportDatatables>
                    <activeRecipes>
                        <recipe>org.openrewrite.maven.BestPractices</recipe>
                    </activeRecipes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <plugins>
            <!-- integrate maven-cobertura-plugin to project site -->
        </plugins>
    </reporting>

    <!-- Apache 2 license -->
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
        </license>
    </licenses>

</project>
